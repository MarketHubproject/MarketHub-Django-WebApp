{
  "name": "MarketHub-theme",
  "version": "1.0.0",
  "description": "MarketHub theme build tools for MarketHub Django WebApp",
  "scripts": {
    "build": "sass homepage/static/MarketHub/scss/markethub.scss homepage/static/MarketHub/css/markethub.css --style=compressed --source-map",
    "build-dev": "sass homepage/static/MarketHub/scss/markethub.scss homepage/static/MarketHub/css/markethub.css --style=expanded --source-map",
    "watch": "sass homepage/static/MarketHub/scss/markethub.scss homepage/static/MarketHub/css/markethub.css --watch --style=expanded --source-map",
    "clean": "rimraf homepage/static/MarketHub/css/*.css*",
    "lint-css": "stylelint **/*.css **/*.scss",
    "lint-css:fix": "stylelint **/*.css **/*.scss --fix",
    "lint-icons": "stylelint **/*.css **/*.scss --config .stylelintrc.json"
  },
  "devDependencies": {
    "bootstrap-icons": "^1.13.1",
    "rimraf": "^5.0.5",
    "sass": "^1.77.8",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "keywords": [
    "scss",
    "css",
    "MarketHub",
    "django",
    "bootstrap"
  ],
  "author": "MarketHub Team",
  "license": "MIT"
}
