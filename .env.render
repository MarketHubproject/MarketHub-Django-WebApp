# Environment variables for testing production settings locally
# Copy this to .env and update with your values

# Core Django Settings
SECRET_KEY=your-secret-key-here-for-testing
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com
SITE_URL=http://localhost:8000

# Database (use SQLite locally for testing)
DATABASE_URL=sqlite:///db.sqlite3

# Static Files
STATIC_URL=/static/
STATIC_ROOT=./staticfiles

# Stripe Settings (test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key
STRIPE_SECRET_KEY=sk_test_your_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret
PAYMENT_ENV=test

# Email (console for testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Logging
DJANGO_LOG_LEVEL=DEBUG

# Note: Do not commit this file to version control
# Add .env to your .gitignore file